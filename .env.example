# Heart Disease Prediction - Environment Configuration Example
# Copy this file to .env and update with your values

# ===========================================
# API Configuration
# ===========================================

# Backend API URL
# Development: http://localhost:5000
# Production: https://api.yourdomain.com
VITE_API_ENDPOINT=http://localhost:5000

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ===========================================
# Application Settings
# ===========================================

# Enable debug mode (true/false)
VITE_DEBUG=true

# Show input summary in results (true/false)
VITE_SHOW_INPUT_SUMMARY=true

# Auto-scroll to results (true/false)
VITE_SCROLL_TO_RESULTS=true

# ===========================================
# Validation Settings
# ===========================================

# Age validation
VITE_AGE_MIN=1
VITE_AGE_MAX=120

# Blood pressure validation (mmHg)
VITE_BP_MIN=80
VITE_BP_MAX=200

# Cholesterol validation (mg/dl)
VITE_CHOL_MIN=100
VITE_CHOL_MAX=600

# Heart rate validation (bpm)
VITE_THALACH_MIN=60
VITE_THALACH_MAX=220

# Number of major vessels (ca)
VITE_CA_MIN=0
VITE_CA_MAX=4

# ST Depression (oldpeak)
VITE_OLDPEAK_MIN=0
VITE_OLDPEAK_MAX=10
